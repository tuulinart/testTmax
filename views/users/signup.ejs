<%- include('../../partials/header.ejs') %>

    <body>
        <%- include('../../partials/navbar.ejs') %>

            <div class="container">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3>Cadastro</h3>
                    </div>
                    <div class="card-body">
                        <form action="/users/create" method="POST">
                            <input class="form-control" type="text" name="name" placeholder="Nome">
                            <br>
                            <input class="form-control" type="email" name="email" placeholder="Email@email.com">
                            <br>
                            <input class="form-control" type="password" name="password" placeholder="********">
                            <br>
                            <div class="btn-group">
                                <input class="btn-check" type="radio" name="permission" id="student" autocomplete="off"
                                    value="Estudante">
                                <label class="btn btn-primary" for="student">Estudante</label>
                                <input class="btn-check" type="radio" name="permission" id="teacher" autocomplete="off"
                                    value="Professor">
                                <label class="btn btn-primary" for="teacher">Professor</label>
                                <input class="btn-check" type="radio" name="permission" id="director" autocomplete="off"
                                    value="Diretor">
                                <label class="btn btn-primary" for="director">Diretor</label>
                            </div>
                            <br>
                            <br>
                            <button type="submit" class="btn btn-primary col-12"> Cadastrar </button>
                        </form>
                    </div>
                </div>
            </div>

    </body>

    <%- include('../../partials/footer.ejs') %>