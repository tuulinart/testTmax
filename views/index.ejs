<%- include('../partials/header.ejs'); %>

    <body style="min-width:372px;">
        <%- include('../partials/navbar.ejs', {nameUser: name }); %>
            <main>

                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md 5">
                            <form class="justify-content-center">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" placeholder="Qual livro deseja?">
                                    <button class="btn btn-dark">
                                        Buscar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <hr class="mt=3">
                    <div class="row">
                        <% books.forEach(book=> { %>

                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 d-flex align-items-stretch"
                                style="padding-bottom: 15px;">
                                <div class="card text-center bg-light">
                                    <img src="https://viverdeblog.com/wp-content/uploads/2017/04/como-escrever-um-livro-topo.png"
                                        alt="bookCover" class="card-img-top">
                                    <div class="card-header">
                                        <h6 class="card-title">
                                            <%=book.title %>
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <i>
                                            <%=book.author %>
                                        </i>
                                        <br>
                                        <br>
                                        <small>
                                            <%=book.permission %>
                                        </small>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/books/<%=book.id%>">
                                            <button class="btn btn-primary">
                                                Reservar
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                </div>
                </div>

            </main>


    </body>
    <%- include('../partials/footer.ejs') %>